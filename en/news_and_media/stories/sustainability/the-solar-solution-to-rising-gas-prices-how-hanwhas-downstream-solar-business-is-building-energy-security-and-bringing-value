<script>
function related_Content(){
	var isMobile = false;
	var pageEnd;
	var schVal ="solar_energy,";
 	var paramLatest  = "?page=1&cate="+"type"+"&sch=&idstAll=corporate_news,solar_energy,leisure_and_lifestyle,financial_services,construction,chemicals_materials,aerospace_and_mechatronics";
 	var paramRelated = "?page=1&cate="+"type"+"&sch="+schVal+"&idstAll=corporate_news,solar_energy,leisure_and_lifestyle,financial_services,construction,chemicals_materials,aerospace_and_mechatronics";
	var pagePath =$("#pagePath").val();
	pagePath +=".html";
	console.log("scV= "+schVal);

	var manualChk = $("#isManual").val();
	var contents =[];

	$.ajaxSetup({
		  async: false
		 });
	//console.log("Relate "+ paramRelated);
	$.getJSON("/content/hanwha/en/news_and_media/stories/sustainability/the-solar-solution-to-rising-gas-prices-how-hanwhas-downstream-solar-business-is-building-energy-security-and-bringing-value-to-consumers/jcr:content/parsys-related/related_content.related.json"+ paramRelated, function(data) {
		pageEnd = data.pageEnd;
        var html ="";
        var html_related =[];
        var listCount = 0;

		//console.log("Related :: \n" + JSON.stringify(data.newsroomList) );

    	$.each(data.newsroomList, function(i, obj) {
    		listCount++;
    		if (obj.url != "null" && obj.url != "" && obj.url != null){
				if(pagePath == obj.url){
					html =" ";
				}
				else{
					if(true){
						html += "<li> ";
					}else{
						html += "<div class='related-con-box'> ";
					}

	    			html += "	<img src='" + obj.tpImage + "' alt=''>";
	    			html +=	"	<a href='" + obj.url + "' onclick=\"dtmDataLayer.internallink='"+obj.ttl+"'; _satellite.track('internallink');\">";

	    			if(true){
	    				html +=	"		<strong>" + obj.ttl + "</strong>";
	    				html +=	"		<span>" + obj.tpDesc + "</span>";
					}else{
						html +=	"		<span>" + obj.ttl + "</span>";
					}
	    			html += "	</a>	";

	    			if(true){
						html += "</li> ";
					}else{
						html += "</div>		";
					}


				}

				html_related[i] = html ;
				html="";
    		}

			data = null;

    	});

    	for(var i =0 ;i < html_related.length;i++){
    		if(html_related[i] ==" "){
    			html_related.splice(i,1);
    		}
    	}

		if(listCount == 0){
			html += "<p class=\"mInfo1\">Sorry, no results were found.</p>";
		}

		contents[1]=html_related[0];
		contents[2]=html_related[1];
		contents[3]=html_related[2];

    });

	$.ajaxSetup({
		  async: false
		 });

	//console.log("Latest"+ paramLatest);
	$.getJSON("/content/hanwha/en/news_and_media/stories/sustainability/the-solar-solution-to-rising-gas-prices-how-hanwhas-downstream-solar-business-is-building-energy-security-and-bringing-value-to-consumers/jcr:content/parsys-related/related_content.related.json"+ paramLatest, function(data) {
		pageEnd = data.pageEnd;
        var html ="";
        var html_story =[];

		var listCount = 0;
		//console.log("Latest :: \n" + JSON.stringify(data.newsroomList) );

    	$.each(data.newsroomList, function(i, obj) {
    		listCount++;
    		if (obj.url != "null" && obj.url != "" && obj.url != null){
				if(pagePath == obj.url){
					html =" ";
				}
				else{
					if(true){
						html += "<li> ";
					}else{
						html += "<div class='related-con-box'> ";
					}

	    			html += "	<img src='" + obj.tpImage + "' alt=''>";
	    			html +=	"	<a href='" + obj.url + "' onclick=\"dtmDataLayer.internallink='"+obj.ttl+"'; _satellite.track('internallink');\">";

	    			if(true){
	    				html +=	"		<strong>" + obj.ttl + "</strong>";
	    				html +=	"		<span>" + obj.tpDesc + "</span>";
					}else{
						html +=	"		<span>" + obj.ttl + "</span>";
					}
	    			html += "	</a>	";

	    			if(true){
						html += "</li> ";
					}else{
						html += "</div>		";
					}


				}

				html_story[i] = html ;
				html="";
    		}

			data = null;

    	});

    	for(var i =0 ;i < html_story.length;i++){
    		if(html_story[i] ==" "){
    			html_story.splice(i,1);
    		}
    	}

		if(listCount == 0){
			html += "<p class=\"mInfo1\">Sorry, no results were found.</p>";
			contents[0] =html;
		}else{
			contents[0] =html_story[0];
		}

    });

	var latestCtnt = contents[0];

	for(var i =1;i < contents.length;i++){
		if(latestCtnt ==contents[i]) contents.splice(i,1);
	}

	if(manualChk =="" && contents.length > 0){
		if(true){
			if(true){
				$(".latest_content").find("ul").html(contents[0]);
			}else{
				$(".latest_story_wrap").find("ul").html(contents[0]);
			}
			$("#Newsroom_Content_RelatedContents_Box").html(contents[1]+contents[2]);
		}else{
			$("#latest_story").html(contents[0]);
			$("#related_content").html(contents[1]+contents[2]);
		}
	}

};
</script>

