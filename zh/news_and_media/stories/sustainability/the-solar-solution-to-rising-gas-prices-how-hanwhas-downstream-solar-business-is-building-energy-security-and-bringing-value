<script>
function go_Share(sName){
	var oriName = ".at-svc-"+sName;
	oriName += " > .at-icon-wrapper";

	$(oriName).trigger('click');
	$("#btnShareClose").trigger('click');
}

function changeParam(){
        var lang = "zh";
		var tags ="韩华思路信, 韩华Qcells, 绿色能源, 能源安全, 光伏能源, 下游光伏事业";
		var tag = tags.split(",");

		var str="";
		for(var i=0;i<tag.length;i++){
			var encode_text = encodeURIComponent(tag[i].trim());

			str +="<li><a href=\"/content/hanwha/"+ lang +"/tag.html?find="+ encode_text +"\" target=\"_blank\" onclick=\"dtmDataLayer.internallink='Tag List Click("+tag[i].trim()+")'; _satellite.track('internallink');\">"+ tag[i].trim() + "</a></li>";

		}
		$(".list_tag").html(str);

}
</script>

<script>
    $(document).ready(function(){
        changeParam();
    });
</script>

	




