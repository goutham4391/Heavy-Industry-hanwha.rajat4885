        console.log("videos pause");
        $("#result").text("videos pause");
	});

    $("#stopnow").click(function(){
        $("#audioPlayback").get(0).pause();
        $("#audioPlayback").get(0).currentTime=0;
        console.log("videos stop");
        $("#result").text("videos stop");
	});

	$("#playnow").click(function(){
        $("#audioPlayback").get(0).play();
        console.log("videos play");
        $("#result").text("videos play");
	});

	$("#createPolly").click(function(){
        console.log("createpolly");
		speakText();
	});

	$("#testBtn").click(function(){
		console.log("TEXT\n"+$("#aws_polly").text());
		getBklist();
	});


	</script>
